{
    "name": "fioru/lasntgadmin-app",
    "description": "WordPress WooCommerce app",
    "license": "proprietary",
    "version": "0.1.0",
    "repositories": [
        {
            "type": "vcs",
            "url":  "git@github.com:fioru-software/lasntgadmin-grant-funded-payment-gateway.git"
        }
    ],
    "scripts": {
        "all": ["@lint", "@check", "@secure"],
        "check": "phpcs --standard=ruleset.xml tests",
        "fix": "phpcbf --standard=ruleset.xml tests",
        "secure": "security-checker security:check composer.lock",
        "lint": "phplint tests"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "3.*",
        "fakerphp/faker": "^1.14",
        "enlightn/security-checker": "^1.10.0",
        "overtrue/phplint": "^3.0"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "phpunit/phpunit": true,
            "squizlabs/php_codesniffer": true,
            "fakerphp/faker": true,
            "enlightn/security-checker": true,
            "overtrue/phplint": true
        }
    },
    "require": {
        "fioru/lasntgadmin-grant-funded-payment-gateway": "^0.1.1"
    }
}
